<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_store_add_two"
    tools:context=".StoreAddTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가게 등록3"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="사진 등록"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/storeImageAddButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="요일"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/dayLinear"
                    >

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="일"
                    android:textSize="15dp"
                    android:background="@color/gray"
                    android:layout_marginRight="1dp"
                     />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="월"
                    android:textSize="15dp"
                    android:background="@color/gray"
                    android:layout_marginRight="1dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="화"
                    android:textSize="15dp"
                    android:background="@color/gray"
                    android:layout_marginRight="1dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="수"
                    android:layout_marginRight="1dp"
                    android:textSize="15dp"
                    android:background="@color/gray"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="목"
                    android:layout_marginRight="1dp"
                    android:textSize="15dp"
                    android:background="@color/gray"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="금"
                    android:layout_marginRight="1dp"
                    android:textSize="15dp"
                    android:background="@color/gray"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="5dp"
                    android:text="토"
                    android:textSize="15dp"
                    android:background="@color/gray"
                    />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시작 시간 : "
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/hour"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="15dp"
                        android:hint="시"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:text="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/minutes"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:hint="분"
                        android:text="" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종료 시간 : "
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/endHour"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="15dp"
                        android:hint="시"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:text="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/endMinutes"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:hint="분"
                        android:text="" />


                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="소개글"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/storeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint=" 소개글"
                    android:breakStrategy="simple"
                    android:text="" />






                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addStoreButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text="가게 등록"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</FrameLayout>