<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:flow_horizontalAlign="start"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_result_box"
        android:padding="10dp"

        android:orientation="vertical">
        <HorizontalScrollView
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:foregroundGravity="center"
            android:scrollbars="none"

            android:id="@+id/search_Scroll">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:id="@+id/image_container"
                android:orientation="horizontal">
        <ImageView
            android:id="@+id/store_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:clipToOutline="true"
            android:background="@drawable/round_image"
            android:padding="1dp"
            android:src="@drawable/anibuddy_logo" />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="storeName"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/store_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1km"
            android:textSize="16dp"
            android:textColor="@android:color/holo_blue_dark"
            android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textSize="16dp"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="4dp"/>
        <TextView
            android:id="@+id/store_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 "
            android:textSize="16dp"
            android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/store_reviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="16dp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>