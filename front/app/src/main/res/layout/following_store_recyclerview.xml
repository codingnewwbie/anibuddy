<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="396dp"
    android:layout_height="78dp"
    android:background="@drawable/edge"
    app:layout_constraintTop_toBottomOf="@+id/view"
    android:layout_marginTop="40dp"
    tools:layout_editor_absoluteX="5dp"
    android:id="@+id/following_store_recyclerview"
    android:layout_marginLeft="5dp">

    <ImageView
        android:id="@+id/followList1"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/chat" />

    <TextView
        android:id="@+id/followingList1Name"
        android:layout_width="75dp"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/followList1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/followList1"
        android:text="이름1"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollbars="horizontal"
        />

    <TextView
        android:id="@+id/followingList1Address"
        android:layout_width="230dp"
        android:layout_height="27dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/followList1"
        android:text="주소1"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollbars="horizontal"
        />

    <TextView
        android:id="@+id/followingList1Cateogry"
        android:layout_width="75dp"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/followingList1Name"
        android:layout_marginStart="80dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/followingList1Name"
        android:text="카테고리1"
        tools:layout_editor_absolutzeX="238dp"
        tools:layout_editor_absoluteY="143dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollbars="horizontal"
        />

</RelativeLayout>