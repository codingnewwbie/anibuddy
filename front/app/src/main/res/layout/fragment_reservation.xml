<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment_reservation_list"
    >
    <android.widget.Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_ing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.5"
        android:background="@drawable/search_result_category"
        android:text="진행중인 예약"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <android.widget.Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_complete"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toRightOf="@id/reservation_ing"
        android:text="지난 예약"
        android:textColor="@color/black"
        app:layout_constraintWidth_percent="0.5"
        android:textSize="20dp"
        android:background="@drawable/search_result_category"/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fragment_res"
        app:layout_constraintTop_toBottomOf="@id/reservation_ing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        />
</androidx.constraintlayout.widget.ConstraintLayout>